<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiMenuApp.Mobile.ViewModels"             
             xmlns:models="clr-namespace:MauiMenuApp.Domain.Models"
             xmlns:controls="clr-namespace:MauiMenuApp.Mobile.Pages.Controls"
             xmlns:pullToRefresh="clr-namespace:Syncfusion.Maui.Toolkit.PullToRefresh;assembly=Syncfusion.Maui.Toolkit"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MauiMenuApp.Mobile.Pages.MainPage"
             x:DataType="models:MenuItemModel"
             Title="{Binding Today}">

    <Grid RowDefinitions="*, Auto">
        <controls:MenuItemControl Grid.Row="0"/>
        <ContentView Grid.Row="1"
                     ControlTemplate="{StaticResource ContactUsTemplate}" />
    </Grid>
</ContentPage>
