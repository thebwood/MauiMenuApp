<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiMenuApp.Mobile.ViewModels"             
             xmlns:model="clr-namespace:MauiMenuApp.Domain.Models;assembly=MauiMenuApp.Domain"
             xmlns:controls="clr-namespace:MauiMenuApp.Mobile.Pages.Controls"
             xmlns:pullToRefresh="clr-namespace:Syncfusion.Maui.Toolkit.PullToRefresh;assembly=Syncfusion.Maui.Toolkit"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MauiMenuApp.Mobile.Pages.MainPage"
             x:DataType="model:MenuItemModel"
             Title="Menu Items">

    <Grid RowDefinitions="*">
        <controls:MenuItemControl Grid.Row="0"
                                  MenuItems="{Binding MainMenuItems}"/>
    </Grid>
</ContentPage>
