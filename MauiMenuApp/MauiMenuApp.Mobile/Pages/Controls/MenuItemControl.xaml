<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:MauiMenuApp.Domain.Models"
             xmlns:viewmodel="clr-namespace:MauiMenuApp.Mobile.ViewModels"
             x:Class="MauiMenuApp.Mobile.Pages.Controls.MenuItemControl"
             Title="MenuItemControl">
    <CollectionView ItemsSource="{Binding MenuItems}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="MenuItemModel">
                <Border Stroke="LightGray"
                        StrokeThickness="1"
                        BackgroundColor="White"
                        Margin="0,5"
                        Padding="15">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MenuItemControlViewModel}}, Path=NavigateCommand}"
                                              CommandParameter="{Binding .}" />
                    </Border.GestureRecognizers>
                    <HorizontalStackLayout Spacing="10" Padding="10">
                        <Label Text="{Binding DisplayName}"
                               VerticalOptions="Center"
                               HorizontalOptions="Start" />
                    </HorizontalStackLayout>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>